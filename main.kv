<MenuBtn@Button>:
    font_size:40
    size_hint_x:.3
<Root>:
    sm: sm
    orientation:'vertical'
    spacing:10
    padding:10
    BoxLayout:
        spacing:6
        size_hint_y:.22
        MenuBtn:
            text:'Prev'
            on_press:
                root.sm.current = root.sm.previous()
        MenuBtn:
            text:'Next'
            on_press:
                root.sm.current = root.sm.next()
	ScreenManager:
		id: sm
		Screen:
			name:'scrn1'
            BoxLayout:
                Label:
                    text:"Make new playlist"
		Screen:
			name:'scrn2'
            Label:
                text:"Edit your tags"
		Screen:
			name:'scrn3'
            Label:
                text:"Settings"
